<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd"> 
<hibernate-mapping>
<class name="com.modal.Mail" table="mail">
<id name="id" type="int">  
<generator class="increment"></generator>  
</id> 
<property name="sender" type="string" length="100"/>
<property name="receiver" type="string" length="100"/>
<property name="subject" type="string" length="200"/>
<property name="message" type="string" length="500"/>
<property name="date" type="date"/>
</class>
</hibernate-mapping>